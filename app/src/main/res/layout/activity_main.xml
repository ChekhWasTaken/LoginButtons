<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_centerHorizontal="true"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    tools:context="shaishav.com.androidloginbuttonexample.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

    <timeparser.com.androidloginbuttons.GooglePlusButton
        android:layout_width="100dp"
        android:id="@+id/google"
        android:textAlignment="center"
        app:iconSize="30dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/facebook"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </timeparser.com.androidloginbuttons.GooglePlusButton>

    <timeparser.com.androidloginbuttons.FacebookButton
        android:layout_width="100dp"
        android:id="@+id/facebook"
        app:iconSize="30dp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@+id/google"
        android:layout_toEndOf="@+id/google">

    </timeparser.com.androidloginbuttons.FacebookButton>

    <timeparser.com.androidloginbuttons.TwitterButton
        android:layout_width="100dp"
        app:iconSize="30dp"
        android:layout_toRightOf="@+id/facebook"
        android:layout_height="100dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp">

    </timeparser.com.androidloginbuttons.TwitterButton>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <timeparser.com.androidloginbuttons.GooglePlusButton
            android:layout_width="match_parent"
            android:textAlignment="center"
            app:iconSize="30dp"
            android:layout_margin="5dp"
            android:text="Sign in with Google"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/facebook"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

        </timeparser.com.androidloginbuttons.GooglePlusButton>

        <timeparser.com.androidloginbuttons.FacebookButton
            android:layout_width="match_parent"
            android:text="Sign in with Facebook"
            app:iconSize="30dp"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/google"
            android:layout_toEndOf="@+id/google">

        </timeparser.com.androidloginbuttons.FacebookButton>

        <timeparser.com.androidloginbuttons.TwitterButton
            android:layout_width="match_parent"
            app:iconSize="30dp"
            android:layout_margin="5dp"
            android:text="Sign in with Twitter"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp">

        </timeparser.com.androidloginbuttons.TwitterButton>

    </LinearLayout>
</LinearLayout>
